<turbo-frame id="<%= dom_id(company) %>">
  <div class="bg-white shadow rounded p-4">
    <h5 class="text-lg font-semibold">
      <%= link_to company.name, company, class: 'text-indigo-600 hover:underline' %>
    </h5>
    <p class="text-sm">Industry: <%= company.industry %></p>
    <div class="mt-2">
      <%= link_to 'Edit', edit_company_path(company), class: 'text-indigo-600 hover:underline' %> |
      <%= link_to 'Destroy', company, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-600 hover:underline' %>
    </div>
  </div>
</turbo-frame>
