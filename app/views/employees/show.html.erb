<div class="max-w-md mx-auto bg-white shadow rounded p-6">
  <h1 class="text-2xl font-bold mb-3">Employee Details</h1>
  <p class="mb-1"><strong>Name:</strong> <%= @employee.name %></p>
  <p class="mb-1"><strong>Position:</strong> <%= @employee.position %></p>
  <p class="mb-3"><strong>Company:</strong> <%= @employee.company.name %></p>
  <div>
    <%= link_to 'Edit', edit_employee_path(@employee), class: 'px-4 py-2 bg-indigo-600 text-white rounded' %>
    <%= link_to 'Back', employees_path, class: 'px-4 py-2 bg-gray-600 text-white rounded' %>
  </div>
</div>
